<br/>

<%= form_for(@post, remote: true, html:{class:"form-horizontal"}) do |f| %>

<div class="form-group row">
  <%= f.label "Write a Post", :class => "control-label col-md-2" %>
  <div class="form-controls col-md-4">
    <%= f.text_field :text, :class => 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-md-offset-2 col-md-4">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
</div>

<% end %>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Post</th>
      <th>Yeti?</th>
      <th># Yeti</th>
    </tr>
  </thead>

  <tbody id="posts">
    <%= render @posts %>
  </tbody>
</table>
